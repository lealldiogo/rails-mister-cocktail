<h1 class="text-center">Looking good Mr.Cocktail!</h1>



<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col-xs-12 col-sm-4">
        <% puts c.photo.path %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path c.photo, height: 300, width: 400, crop: :fill %>');">
          <h2 class="card-description"><%= c.name %></h2>
          <%= link_to "", cocktail_path(c), class: "card-link"%>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary center-block" %>
</div>
